{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["characters"],
  "properties": {
    "maxPerTurn": {
      "type": "integer",
      "title": "Max portraits to show per bot message",
      "default": 3,
      "minimum": 1,
      "maximum": 12
    },
    "portraitSize": {
      "type": "integer",
      "title": "Portrait size (px): Base width for each portrait.",
      "description": "Used when wrapping is allowed. In single-row mode items will auto-shrink to fit, capped by this width.",
      "default": 560,
      "minimum": 120,
      "maximum": 1600
    },
    "keepOnOneRow": {
      "type": "boolean",
      "title": "Keep portraits on one row (auto-shrink)",
      "default": true
    },
    "showBalance": {
      "type": "boolean",
      "title": "Show currency balance",
      "default": true
    },
    "balanceLabel": {
      "type": "string",
      "title": "Currency label",
      "default": "C"
    },
    "fallbackToAuthor": {
      "type": "boolean",
      "title": "If no speakers detected, show the bot author's portrait",
      "default": false
    },
    "characters": {
      "type": "array",
      "title": "Characters",
      "minItems": 1,
      "maxItems": 32,
      "items": {
        "type": "object",
        "required": ["name", "imageUrl"],
        "properties": {
          "name": { "type": "string", "title": "Display name" },
          "aliases": {
            "type": "array",
            "title": "Aliases that might appear before the colon (e.g., 'Nico')",
            "items": { "type": "string" }
          },
          "imageUrl": { "type": "string", "format": "uri", "title": "Direct image URL (HTTPS)" },
          "traits": { "type": "array", "items": { "type": "string" }, "title": "Traits (optional)" }
        }
      }
    }
  }
}
