{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["characters"],
  "properties": {
    "showPanel": { "type": "boolean", "title": "Show the right-side panel", "default": true },
    "maxPerTurn": { "type": "integer", "title": "Max portraits to show per bot message", "default": 3 },
    "fallbackToAuthor": { "type": "boolean", "title": "If no speakers detected, show the bot author's portrait", "default": false },

    "showBalance": {
      "type": "boolean",
      "title": "Show C balance",
      "default": true,
      "description": "Toggle the Corruption Ether balance badge in the header."
    },
    "balanceRegex": {
      "type": "string",
      "title": "Regex to extract C balance (first capture = number)",
      "default": "C\\s*([0-9][0-9,\\.]*)",
      "description": "Example matches: \"C 1,250\", \"C1250\", \"Balance: C 500\"."
    },

    "characters": {
      "type": "array",
      "title": "Characters",
      "minItems": 1,
      "maxItems": 32,
      "items": {
        "type": "object",
        "required": ["name", "imageUrl"],
        "properties": {
          "name": { "type": "string", "title": "Display name" },
          "aliases": { "type": "array", "items": { "type": "string" }, "title": "Aliases" },
          "imageUrl": { "type": "string", "format": "uri", "title": "Direct image URL (HTTPS)" },
          "traits": { "type": "array", "items": { "type": "string" }, "title": "Traits (optional)" }
        }
      }
    }
  }
}
